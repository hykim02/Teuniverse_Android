<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 백그라운드로 사용될 색상 지정 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ap" /> <!-- 색상을 원하는 색으로 지정 -->
        </shape>
    </item>

    <!-- 사선으로 잘린 모양 그리기 -->
    <item
        android:top="16dp"
        android:right="16dp"
        android:left="0dp"
        android:bottom="0dp"> <!-- 잘린 부분의 높이를 조절 -->
    <rotate
        android:fromDegrees="45"
        android:pivotX="0%"
        android:pivotY="100%">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- 색상을 원하는 색으로 지정 -->
        </shape>
    </rotate>
</item>

</layer-list>